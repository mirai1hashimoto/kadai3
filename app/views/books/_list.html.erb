<!-- ユーザーの詳細 -->
<table class='table'>
  <h1>User info</h1>
  <tr><%= image_tag user.get_profile_image(100,100) %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th><%= link_to "Update User", edit_user_path(@user.id)%>

    <i class="fas fa-user-cog"></i></th>
  </tr>
  </tr>
</table>

   <h1>New book</h1>

   <% if book.errors.any? %>
  <%= book.errors.count %>error
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(Book.new) do |f| %>
